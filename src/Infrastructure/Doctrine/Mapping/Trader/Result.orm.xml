<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Trader\Model\Result" table="trader_result" repository-class="App\Infrastructure\Doctrine\Repository\ResultRepository">
        <id name="id" column="id" type="string" length="26">
            <generator strategy="NONE" />
        </id>
        <field name="marketType" column="market_type" type="smallint" />
        <field name="relevantDate" column="relevant_date" type="datetime_immutable" />
        <field name="startDate" column="start_date" type="datetime_immutable" />
        <field name="initialCapital" column="initial_capital" type="float" />
        <field name="profit" column="profit" type="float" />
        <field name="profitPercentage" column="profit_percentage" type="float" />
        <field name="dealCount" column="deal_count" type="integer" />
        <field name="volume" column="volume" type="float" />
        <field name="active" column="active" type="boolean" />

        <unique-constraints>
            <unique-constraint columns="trader_id,market_type" name="trader_result_trader_id_market_type_idx" />
        </unique-constraints>

        <many-to-one field="trader" target-entity="App\Domain\Trader\Model\Trader">
            <join-column name="trader_id" referenced-column-name="id" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <many-to-one field="broker" target-entity="App\Domain\Trader\Model\Broker">
            <join-column name="broker_id" referenced-column-name="id" />
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-one>

        <indexes>
            <index columns="trader_id" name="trader_result_trader_id_idx" />
            <index columns="broker_id" name="trader_result_broker_id_idx" />
        </indexes>
    </entity>

</doctrine-mapping>
