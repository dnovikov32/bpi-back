<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Trader\Model\Result" table="trader_result" repository-class="App\Infrastructure\Doctrine\Repository\ResultRepository">
        <id name="id" column="id" type="string" length="26">
            <generator strategy="NONE" />
        </id>
        <field name="year" column="year" type="smallint" />
        <field name="traderId" column="trader_id" type="integer" />
        <field name="marketType" column="market_type" type="smallint" />
        <field name="relevantDate" column="relevant_date" type="datetime_immutable" />
        <field name="startDate" column="start_date" type="datetime_immutable" />
        <field name="initialCapital" column="initial_capital" type="decimal" scale="12" precision="2" />
        <field name="profit" column="profit" type="decimal" scale="12" precision="2" />
        <field name="profitPercentage" column="profit_percentage" type="decimal" scale="6" precision="3" />
        <field name="dealCount" column="deal_count" type="integer" />
        <field name="volume" column="volume" type="decimal" scale="12" precision="2" />
        <field name="active" column="active" type="boolean" />

        <unique-constraints>
            <unique-constraint columns="year,market_type,trader_id" name="trader_result_year_market_type_trader_id_idx" />
        </unique-constraints>

        <many-to-one field="brokerId" target-entity="App\Domain\Trader\Model\Broker">
            <join-column name="broker_id" referenced-column-name="id" />
        </many-to-one>

        <indexes>
            <index columns="broker_id" name="trader_result_broker_id_idx" />
        </indexes>
    </entity>

</doctrine-mapping>
