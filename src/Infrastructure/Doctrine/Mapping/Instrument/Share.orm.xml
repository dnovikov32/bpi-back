<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Instrument\Entity\Share" table="instrument_share" repository-class="App\Infrastructure\Doctrine\Repository\ShareRepository">
        <id name="id" column="id" type="string" length="26">
            <generator strategy="NONE" />
        </id>
        <field name="figi" column="figi" length="12" />
        <field name="ticker" column="ticker" length="32" />
        <field name="isin" column="isin" length="12" />
        <field name="lot" column="lot" type="integer" />
        <field name="currency" column="currency" length="3" />
        <field name="name" column="name" length="255" />
        <field name="uid" column="uid" length="36" />
        <field name="first1minCandleDate" column="first_1min_candle_date" type="datetime_immutable" nullable="true" />
        <field name="first1dayCandleDate" column="first_1day_candle_date" type="datetime_immutable" nullable="true" />

        <indexes>
            <index columns="figi" name="instrument_share_figi_idx" />
        </indexes>

        <unique-constraints>
            <unique-constraint columns="ticker" name="instrument_share_ticker_unq" />
            <unique-constraint columns="uid" name="instrument_share_uid_unq" />
        </unique-constraints>
    </entity>

</doctrine-mapping>
